{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests"
  ],
  "onboarding": false,
  "dependencyDashboardAutoclose": true,
  "enabledManagers": [
    "terraform",
    "github-actions",
    "helm-values",
    "regex"
  ],
  "timezone": "Europe/Berlin",
  "prConcurrentLimit": 10,
  "prHourlyLimit": 4,
  "labels": ["dependencies"],
  "reviewers": ["elohmeier"],
  "packageRules": [
    {
      "groupName": "terraform providers",
      "matchManagers": ["terraform"],
      "labels": ["dependencies", "terraform"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "groupName": "github actions",
      "matchManagers": ["github-actions"],
      "labels": ["dependencies", "ci"]
    },
    {
      "groupName": "helm charts",
      "matchManagers": ["helm-values", "regex"],
      "labels": ["dependencies", "helm"]
    }
  ],
  "regexManagers": [
    {
      "description": "Helm chart versions defined as Terraform variables",
      "fileMatch": ["^variables\\.tf$"],
      "matchStrings": [
        "variable\\s+\"[^\"]+?_helm_repository\"\\s*\\{[\\s\\S]*?default\\s*=\\s*\"(?<registryUrl>(?:https?|oci)://[^\"]+)\"[\\s\\S]*?\\}[\\s\\S]*?variable\\s+\"[^\"]+?_helm_chart\"\\s*\\{[\\s\\S]*?default\\s*=\\s*\"(?<packageName>[^\"]+)\"[\\s\\S]*?\\}[\\s\\S]*?variable\\s+\"[^\"]+?_helm_version\"\\s*\\{[\\s\\S]*?default\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "helm",
      "registryUrlTemplate": "{{{registryUrl}}}",
      "depNameTemplate": "{{{packageName}}}",
      "packageNameTemplate": "{{{packageName}}}",
      "versioningTemplate": "helm"
    }
  ]
}
